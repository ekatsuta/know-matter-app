<%= form_for @lesson do |f| %>
  <%= f.label "Location: " %>
  <%= f.text_field "location" %>
  <%= f.label "Time: " %>
  <%= f.text_field "time" %>
  <%= f.hidden_field :teacher_id, value: "#{@teacher.id}"%>
  <%= f.hidden_field :student_id, value: "#{@student.id}" %>
  <%= f.submit "Book Lesson" %>

<% end %>
