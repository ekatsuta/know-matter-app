
<h1>Hobbies</h1>

Search by Keyword
<%= form_tag("/hobbies", method: :get) do %>
  <%= text_field_tag :search %>
  <%= submit_tag "Search" %>
<% end %>

Search by Hobby Name:
<%= form_tag("/hobbies", method: :get) do %>
  <%= select_tag :search, options_for_select(@hobby_names)%>
  <%= submit_tag "Search" %>
<% end %>

<%= button_to "Sort by Popularity", {:action => "sort_by_popularity"}, :method => :get %>

<%= button_to "Refresh", {:action => "index"}, :method => :get %>

<% @hobbies.each do |hobby| %>
<div class="card">
<ul>
    <a href="<%=hobby_path(hobby)%>">
      <% if hobby.image_url.attached? %>
        <img src="<%= (url_for(hobby.image_url))%>" alt="Hobby Image" style="width:90%"><br></a>
      <% else %>
        <% image_show = hobby.default_image %>
        <img src="<%= image_show%>" alt="Hobby Image" style="width:90%"><br></a>
      <% end %>
    <div class ="container">
    <h4><%= hobby.name %></h4>
    <p><%= hobby.subclass %></p>
    </div>
</ul>
</div>
<% end %>
