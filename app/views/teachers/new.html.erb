<% if flash[:message] %>
  <% flash[:message].each do |message| %>
    <%= message %><br>
  <% end %>
<% end %>


<h1>Create New Teacher</h1>

<%= form_for @teacher do |f| %>
<%= f.label "Username: " %>
<%= f.text_field "username" %>
  <%= f.label "Name: " %>
  <%= f.text_field "name" %>
  <%= f.label "Title: " %>
  <%= f.text_field "title" %>
  <%= f.label "Bio: " %>
  <%= f.text_area "bio" %>
  <%= f.label "Profile Photo: " %>
  <%= f.file_field "profile_image" %>
  <%= f.label "Location: " %>
  <%= f.text_field "location" %>
  <%= f.label "Rates: " %>
  <%= f.number_field "rates" %>
  <%= f.hidden_field :hobby_id, value: "#{@hobby.id}" %>
  <%= f.submit "Complete Submission" %>
<% end %>
