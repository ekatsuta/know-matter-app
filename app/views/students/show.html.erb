<h1><%= @student.name %></h1>

<%= @student.profile_image %>
<p>Name: <%= @student.name %></p>
<p>Age: <%= @student.age %></p>
<p>Email: <%= @student.email %></p>
<p>Reviews: <% unless @reviews.empty? %>
            <ul>
             <% @reviews.each do |review| %>
             <li>
                <p><%= review.teacher.profile_image %></p>
                <p><%= review.teacher.name %></p>
                <p><%= review.content %></p>
                <%= button_to "Delete", delete_review_path(review), method: :delete, data: {confirm: "Are you sure?"} %>
            </li>
            <% end %>
            </ul>
            <% else %>
              <p>No reviews</p>
            <% end %>


<% unless @lessons.empty? %>
  <%=link_to "Your Lessons", your_lessons_path %>
<% end %>

<% if session[:user_id] %>
  <%=link_to "Logout", logout_path, method: :delete %>
  <% else %>
<% end %>

<%= link_to "Update", "#{student_path}/edit" %>


<%= button_to "Delete", @student, method: :delete, data: {confirm: "Are you sure?"} %>
