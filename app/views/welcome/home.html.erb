<header style="padding-left:16px">
  <h1>Welcome <%= @student.name %>!</h1>
</header>

<body>

  <h3>What would you like to learn today?</h3>

  <%= link_to "CREATIVE", "/hobbies/show/Creative" %>
  <%= link_to "TECHNICAL", "/hobbies/show/Tech" %>
  <%= link_to "LIFESTYLE", "/hobbies/show/Lifestyle" %>

  <h3>Recommendations for you: </h3>

  <% @hobbies.each do |hobby| %>
  <div class="card">
  <ul>
        <a href="<%=hobby_path(hobby)%>"><img src="<%=hobby.image_url%>" alt="Hobby Image" style="width:90%"><br></a>
        <div class ="container">
        <h4><%= hobby.name %></h4>
        <p><%= hobby.subclass %></p>
        </div>
  </ul>
  </div>
  <% end %>

</body>
