<% unless @lesson_message.empty? %>
  <% @lesson_message.each do |lesson| %>
    <div class="flash-success message-flex ">
      <%= lesson.message  %>
      <%=link_to image_tag("https://img.icons8.com/ios/50/000000/close-window-filled.png", :border=>0), remove_message_path(lesson), method: :post %>
    </div>
  <% end %>
<% end %>

<body class ="welcome">

<div class="learn_container">
  <h1>What would you like to learn today?</h1>
</div>

<div id="hobby_categories">


  <div class = "circle" id="creative"><%= link_to "CREATIVE", "/hobbies/show/Creative" %></div>
  <div class = "circle" id="tech"><%= link_to "TECHNICAL", "/hobbies/show/Tech" %></div>
  <div class = "circle" id="lifestyle"><%= link_to "LIFESTYLE", "/hobbies/show/Lifestyle" %></div>

</div>


<div class="popular">
  <h3>Our most popular classes: </h3>
</div>

<div class="popular_hobby_container">
  <% @popular_hobbies.each do |hobby| %>
  <div class="card">
    <ul>
          <a href="<%=hobby_path(hobby)%>">
            <% if hobby.image_url.attached? %>
              <img src="<%= (url_for(hobby.image_url))%>" alt="Hobby Image" style="width:90%"><br></a>
            <% else %>
              <% image_show = hobby.default_image %>
              <img src="<%= image_show%>" alt="Hobby Image" style="width:90%"><br></a>
            <% end %>
          <div class ="container">
          <h4><%= hobby.name %></h4>
          <p><%= hobby.subclass %></p>
          </div>
    </ul>
  </div>
  <% end %>
</div>

<div class="recommendations">
  <h3>Recommendations for you: </h3>
</div>

<div class="recommendations_container">

  <% @hobbies.each do |hobby| %>
    <div class="card">
      <ul>
            <a href="<%=hobby_path(hobby)%>">
              <% if hobby.image_url.attached? %>
                <img src="<%= (url_for(hobby.image_url))%>" alt="Hobby Image" style="width:90%"><br></a>
              <% else %>
                <% image_show = hobby.default_image %>
                <img src="<%= image_show%>" alt="Hobby Image" style="width:90%"><br></a>
              <% end %>
            <div class ="container">
            <h4><%= hobby.name %></h4>
            <p><%= hobby.subclass %></p>
            </div>
      </ul>
    </div>
  <% end %>
</div>


</body>
